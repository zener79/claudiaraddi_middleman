/ start contact
#contact.page.section
  .container.contactContainer
    .sixteen.columns
      %h1
        Contact
        %span Me
      %h3
        %span.mediumBold Get in
        %span.medium touch
        %br/
        %span.medium let's
        %span.mediumBold have a chat

    .three.columns.marginTop.contactDetails
      %ul
        %li
          %span.icon-location
          %a{:href => "#?custom=true&width=500&height=500", :rel => "prettyPhoto"} Google Map
    .three.columns.marginTop.contactDetails
      %ul
        %li
          %span.icon-envelop>
          Email:
          %a{:href => "mailto:claudia.raddi@gmail.com"} claudia.raddi@gmail.com


    #contact_form
      .two-thirds.column.marginTop.formWrap

        %form#new_contact.simple_form.contactForm{"accept-charset" => "UTF-8", :action => "https://formspree.io/claudio.benvenuti@gmail.com", :method => "post"}
          %input{:name => "utf8", :type => "hidden", :value => "✓"}/
          .formSecWrap
            .input.string.required.contact_name
              %label.string.required{:for => "contact_name"}
                %abbr{:title => "required"} *
                Name
              %input#contact_name.string.required{"aria-required" => "true", :name => "contact[name]", :required => "required", :type => "text"}/
            .input.email.required.contact_email
              %label.email.required{:for => "contact_email"}
                %abbr{:title => "required"} *
                Email
              %input#contact_email.string.email.required{"aria-required" => "true", :name => "contact[email]", :required => "required", :type => "email"}/
            .input.string.required.contact_subject
              %label.string.required{:for => "contact_subject"}
                %abbr{:title => "required"} *
                Subject
              %input#contact_subject.string.required{"aria-required" => "true", :name => "contact[subject]", :required => "required", :type => "text"}/
          .formSecWrap.formSecWrap2
            .input.text.required.contact_message
              %input{:name => "_gotcha", :style => "display:none", :type => "text"}/
              %label.text.required{:for => "contact_message"}
                %abbr{:title => "required"} *
                Message
              %textarea#contact_message.text.required{"aria-required" => "true", :name => "contact[message]", :required => "required"}
            %div{:style => "display:none"}
              .input.string.optional.contact_nickname.field_with_hint
                %label.string.optional{:for => "contact_nickname"} Nickname
                %input#contact_nickname.string.optional{:name => "contact[nickname]", :type => "text"}/
                %span.hint Leave this field blank!
            %input#submit-form.button{:name => "submit", :type => "submit", :value => "Send Message"}/
          #success

