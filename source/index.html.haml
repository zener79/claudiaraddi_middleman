/ start portfolio
#folio.page.section
  .container
    .sixteen.columns
      %h1 Portfolio
      %h3
        %span.small Those who do
        %span.smallBold not want to
        %br/
        %span.largeBold imitate
        %span.large anything,
        %br/
        %span.medium produce
        %span.mediumBold nothing.
        %br/
        %span.author Salvador Dali
  .gallerySelector
    %ul.gallerySelectorList
      %li.current
        %a{"data-filter" => "article.portfolio", :href => "#"} All
      -dato.categories.each do |cat|
        %li
          %a{"data-filter" => "article.portfolio[data-category~='#{cat.name}']", :href => "#"}=cat.name

  %section.portfolio_container
    -dato.items.each do |item|
      %article.portfolio{"data-category" => item.category.name}
        %section.thumbImage
          %img.fullwidth{:alt => "", :src => item.photos.first.photo.url(w: 350 , h: 350)}/
          .thumbTextWrap
            .thumbText
              %h3.sectionTitle=item.name
              %p=item.description
              -item.photos.each_with_index do |photo, index|
                -if index == 0
                  %a.thumbLink{:href => photo.photo.url(w: 650, h:650), :rel => "prettyPhoto[gallerymulti]"}
                    %i.icon-search
                -else
                  %a{:href => photo.photo.url(w: 650, h:650), :rel => "prettyPhoto[gallerymulti]"}


  .portfolioBottom
/ end portfolio
